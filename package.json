{
	"name": "cm-markdown-editor",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"format": "biome format --write .",
		"lint": "biome lint --fix --unsafe",
		"check": "biome check",
		"dev": "bun dev-server.ts",
		"build:lib": "rm -Rf dist/ && mkdir dist/ && mkdir dist/style && cp -r src/style/* dist/style && bun ./build.ts",
		"build:gh-pages": "rm -Rf public/ && mkdir public/ && mkdir public/style && cp README.md public/ && cp -r src/style/* public/style && cp -r src/assets/* public/ && bun ./build-gh-pages.ts",
		"preview": "bun public/index.html"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.6",
		"@types/bun": "^1.2.17"
	},
	"dependencies": {
		"@codemirror/basic-setup": "^0.20.0",
		"@codemirror/commands": "^6.8.1",
		"@codemirror/lang-markdown": "^6.3.3",
		"@codemirror/language": "^6.11.2",
		"@codemirror/state": "^6.5.2",
		"@codemirror/view": "6.36.2",
		"@lezer/highlight": "^1.2.1",
		"rehype-external-links": "^3.0.0",
		"rehype-figure": "^1.0.1",
		"rehype-katex": "^7.0.1",
		"rehype-slug": "^6.0.0",
		"rehype-stringify": "^10.0.1",
		"remark-breaks": "^4.0.0",
		"remark-gfm": "^4.0.1",
		"remark-math": "^6.0.0",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.1.2",
		"unified": "^11.0.5"
	},
	"peerDependencies": {
		"@types/react": "^19.0.10",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	}
}
